{
  "name": "plantify-frontend",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "backend": "cd ../backend && npm start",
    "dev": "vite --port 3000",
    "check": "pnpm prettier:check && pnpm lint && tsc --build --noEmit",
    "check:fix": "eslint . --ext ts,tsx --fix && prettier --write . && pnpm check",
    "test": "vitest",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "prettier:check": "prettier --check .",
    "prettier:write": "prettier --write .",
    "preview": "vite preview",
    "test:unit": "vitest --project unit",
    "test:browser": "vitest --config=vitest.browser.config.ts"
  },
  "dependencies": {
    "@hookform/resolvers": "^5.2.1",
    "@playwright/test": "^1.57.0",
    "@tailwindcss/vite": "^4.1.10",
    "@tanstack/react-query": "^5.84.1",
    "@tanstack/react-query-devtools": "^5.84.1",
    "@tanstack/react-router": "^1.154.14",
    "@tanstack/react-router-devtools": "^1.154.14",
    "clsx": "^2.1.1",
    "dayjs": "^1.11.13",
    "immer": "^10.1.1",
    "ky": "^1.8.1",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "react-error-boundary": "^6.0.0",
    "react-hook-form": "^7.62.0",
    "react-router": "^7.6.2",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^4.1.10",
    "zod": "^4.0.17",
    "zustand": "^5.0.7"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@hookform/devtools": "^4.4.0",
    "@tanstack/router-plugin": "^1.154.14",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "@vitest/browser-playwright": "^4.0.16",
    "eslint": "^9.39.1",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-unused-imports": "^4.1.4",
    "globals": "^16.5.0",
    "msw": "^2.12.4",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.46.4",
    "vite": "^7.2.4",
    "vitest": "^4.0.16",
    "vitest-browser-react": "^2.0.2"
  },
  "msw": {
    "workerDirectory": [
      "public"
    ]
  }
}
